<h1>Novo projeto</h1>

<%= form_for :project, url: projects_path do |p| %>
<p>
    <%= p.label :title %><br>
    <%= p.text_field :title %>
</p>

<p>
    <%= p.label :description %><br>
    <%= p.text_area :description %>
</p>

<p>
    <%= p.label :start_date %><br>
    <%= p.date_field :start_date %>
</p>

<p>
    <%= p.label :release_date %> <br>
    <%= p.date_field :release_date %>
</p>

<p>
    <%= p.submit %>
</p>
<% end %>

<%= link_to "Voltar", projects_path %>